<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:background="@drawable/exit_dialog_bg"
    android:orientation="vertical"
    android:paddingBottom="10dip"
    android:paddingLeft="20dip"
    android:paddingRight="20dip"
    android:paddingTop="10dip" >

    <LinearLayout
        android:id="@+id/ll_exit_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_exit_dialog_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/exit_dialog_ico_about" />

        <TextView
            android:id="@+id/tv_exit_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dip"
            android:gravity="center"
            android:text="@string/str_tv_exit_title"
            android:textColor="@color/color_exittext"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_exit_dialog_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_exit_top"
        android:layout_centerInParent="true"
        android:background="@mipmap/exit_dialog_tips_line" />

    <TextView
        android:id="@+id/tv_exit_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/iv_exit_dialog_line"
        android:gravity="left|fill_vertical"
        android:text="@string/str_tv_exit_toast_content"
        android:textColor="@color/color_exittext"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_exit_dialog_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dip" >

        <Button
            android:id="@+id/bt_exit_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:background="@drawable/exit_dialog_ok_selector"
            android:text="@string/str_btn_ok"
            android:textColor="@color/color_white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/bt_exit_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:background="@drawable/exit_dialog_cancel_selector"
            android:text="@string/str_btn_cancel"
            android:textColor="@color/color_white"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>